@model IEnumerable<NepaliBazar.Models.ViewModels.ProductVM>

@{
    ViewData["Title"] = "Product List";
}


<div class="conatiner p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp; Create New Product</a>
        </div>
    </div>
<br />
<br />
<table id="tblData" class="table table-bordered table-stripped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Weight
            </th>
            <th>
                Price
            </th>
            <th>
                Brand
            </th>
            <th>
                Category
            </th>
            <th></th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
            @foreach(var product in Model)
            {
                <tr>
            <td>
                @product.Product.Name
            </td>
            <td>
                @product.Product.Weight
            </td>
            <td>
                @product.Product.Price
            </td>
            <td>
                @product.Product.Brand
            </td>
            <td>
                @product.Product.Category.Name
            </td>
            <td>
                <div>
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Product.Id"
                       class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                </div>
            </td>
            <td>
                <div>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@product.Product.Id"
                       class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                </div>
            </td>
        </tr>
           }
        </tbody>
    
</table>
</div>
